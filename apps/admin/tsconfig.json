{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsxImportSource": "react",
    "lib": ["webworker", "dom", "dom.iterable", "esnext"],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/client/*"],
      "@shared/*": ["../../src/shared/*"],
      "@api/*": ["../../src/server/api/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
