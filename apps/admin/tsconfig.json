{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src/client",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/client/*"],
      "@shared/*": ["../../src/shared/*"],
      "@api/*": ["../../src/server/api/*"],
      "@components/*": ["src/client/components/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext", "webworker"],
    "types": ["vite/client"]
  },
  "include": ["src/client"],
  "exclude": ["node_modules", "dist"]
}
