{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "types": ["@types/bun"],
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@src/*": ["src/*"],
      "@vibesynq/*": ["apps/vibesynq/src/*"],
      "@admin/*": ["apps/admin/src/*"],
      "@shared/*": ["src/shared/*"],
      "@server/*": ["src/server/*"],
      "@helpers/*": ["src/server/helpers/*"]
    }
  },
  "exclude": ["node_modules", "**/public", "dist", "main"],
  "include": ["src", "apps", "shared", "src/server/index.ts"]
}
