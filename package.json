{
  "name": "fullstack-bun",
  "version": "1.0.0",
  "description": "Synq Multi-App Platform - A monorepo web platform powered by Bun, ElysiaJS, React, and Svelte",
  "author": "Chris Leveille <cdleveille@gmail.com>",
  "license": "MIT",
  "type": "module",
  "module": "src/server/index.ts",
  "scripts": {
    "prepare": "bun run lefthook.ts",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "tsc": "tsc -p tsconfig.json --noEmit",
    "build": "bun run build:vibesynq && bun run build:admin",
    "build:vibesynq": "cd apps/vibesynq && bunx --bun vite build",
    "build:admin": "cd apps/admin && bunx --bun vite build",
    "compile": "bun build --compile --minify --target bun --outfile main src/server/index.ts",
    "deploy": "flyctl deploy",
    "setup:llm": "mkdir -p public/llm",
    "add:llm-file": "echo 'This is a test file served from the LLM subdomain.' > public/llm/file.txt",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,VIBESYNQ,ADMIN\" -c \"bgBlue.bold,bgGreen.bold,bgMagenta.bold\" \"bun run --hot src/server/index.ts\" \"bun run dev:vibesynq\" \"bun run dev:admin\"",
    "dev:vibesynq": "concurrently --prefix \"[{name}]\" --names \"SERVER,VIBESYNQ\" -c \"bgBlue.bold,bgGreen.bold\" \"bun run --hot src/server/index.ts\" \"cd apps/vibesynq && bunx --bun vite\"",
    "dev:admin": "concurrently --prefix \"[{name}]\" --names \"SERVER,ADMIN\" -c \"bgBlue.bold,bgMagenta.bold\" \"bun run --hot src/server/index.ts\" \"cd apps/admin && bunx --bun vite\"",
    "dev:llm": "bun run setup:llm && bun run add:llm-file && bun run --hot src/server/index.ts",
    "start": "bun run ./main",
    "docker:build": "docker build -t synq-chat .",
    "docker:run": "docker run --rm --ipc=shareable -p 3000:3000 synq-chat"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@elysiajs/eden": "^1.3.2",
    "@evilmartians/lefthook": "^1.11.12",
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/vite": "^4.0.15",
    "@tanstack/react-query": "^5.75.7",
    "@types/bun": "latest",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@types/react-speech-recognition": "^3.9.6",
    "@types/three": "^0.176.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@xenova/transformers": "^2.17.2",
    "autoprefixer": "^10.4.21",
    "body-parser": "^1.20.3",
    "classnames": "^2.5.1",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "globals": "^15.15.0",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "workbox-cli": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.1",
    "@elysiajs/static": "^1.3.0",
    "@elysiajs/swagger": "^1.3.0",
    "elysia": "^1.3.1",
    "elysia-helmet": "^2.0.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-speech-recognition": "^4.0.0",
    "react-toastify": "^11.0.5",
    "react-together": "^0.4.2",
    "react-use": "^17.6.0",
    "three": "^0.162.0"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@evilmartians/lefthook",
    "@swc/core",
    "@tailwindcss/oxide",
    "esbuild",
    "node-datachannel",
    "protobufjs",
    "sharp"
  ]
}
